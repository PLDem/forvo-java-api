<?xml version="1.0" encoding="utf-8"?>
<project>
	<target name="clean">
		<delete dir="build"/>
		<delete dir="javadoc"/>
	</target>
	<target name="compile">
		<mkdir dir="build/classes"/>
		<javac srcdir="src" destdir="build/classes"
			classpath="lib/gson-1.7.1.jar:lib/commons-codec-1.5.jar:."/>
	</target>
	<target name="jar">
		<mkdir dir="build/jar"/>
		<jar destfile="build/jar/forvo-java-api.jar" basedir="build/classes">
		</jar>
	</target>
	<target name="run">
		<java classname="ru.o2genum.forvo.Main"
			classpath="lib/gson-1.7.1.jar:lib/commons-codec-1.5.jar:build/classes"
			fork="true"/>
	</target>
	<target name="javadoc">
		<mkdir dir="javadoc"/>
		<javadoc sourcepath="src" destdir="javadoc"/>
		<jar destfile="build/jar/forvo-java-api-javadoc.jar" basedir="javadoc"/>
	</target>
</project>
